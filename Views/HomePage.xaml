<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalPlannerApp.Views.HomePage"
             Title="Home"
             Shell.NavBarIsVisible="False"> 
    <Grid RowDefinitions="Auto, Auto, Auto, *" Padding="20" RowSpacing="15">

        <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
            
            <Label x:Name="LblGreeting"
                   Text="Loading..."
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}"
                   Grid.Column="0"
                   VerticalOptions="Center"/>

            <StackLayout Grid.Column="1" Orientation="Horizontal" Spacing="5">
                <Label Text="🌙" VerticalOptions="Center" FontSize="18"/>
                <Switch x:Name="ThemeSwitch" Toggled="OnThemeSwitchToggled" />
            </StackLayout>
            
        </Grid>

        <Label x:Name="LblDate"
               Text="..."
               FontSize="18"
               TextColor="Gray"
               Grid.Row="1" />

        <Frame Grid.Row="2" Padding="10" BackgroundColor="{AppThemeBinding Light=#e0e0e0, Dark=#333}">
            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                <Label Text="Morn:" VerticalOptions="Center"/>
                <TimePicker x:Name="PickerMorning" Time="06:00" PropertyChanged="OnTimeChanged"/>
                <Label Text="Eve:" VerticalOptions="Center"/>
                <TimePicker x:Name="PickerEvening" Time="18:00" PropertyChanged="OnTimeChanged"/>
            </HorizontalStackLayout>
        </Frame>

        <Grid Grid.Row="3" ColumnDefinitions="*,*" ColumnSpacing="15">
            <Frame Grid.Column="0" BackgroundColor="{AppThemeBinding Light=#fff3cd, Dark=#4a3b00}" BorderColor="Transparent" CornerRadius="15" Padding="15">
                <StackLayout>
                    <Label Text="☀️ Morning" FontAttributes="Bold" FontSize="18" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    <Label Text="Focus on main goal." FontSize="14" TextColor="Gray"/>
                </StackLayout>
            </Frame>
            <Frame Grid.Column="1" x:Name="FrameEvening" IsVisible="False" BackgroundColor="{AppThemeBinding Light=#d1e7dd, Dark=#0f5132}" BorderColor="Transparent" CornerRadius="15" Padding="15">
                <StackLayout>
                    <Label Text="🌙 Evening" FontAttributes="Bold" FontSize="18" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                    <Label Text="Review your day." FontSize="14" TextColor="Gray"/>
                </StackLayout>
            </Frame>
        </Grid>

    </Grid>

</ContentPage>