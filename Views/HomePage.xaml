<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PersonalPlannerApp.ViewModels"
             x:Class="PersonalPlannerApp.Views.HomePage"
             Title="Home"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#121212}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto, *" Padding="25" RowSpacing="20">

        <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
            <VerticalStackLayout Grid.Column="0" Spacing="2">
                <Label Text="Ready to plan?" FontSize="28" FontAttributes="Bold" 
                       TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                <Label Text="{Binding CurrentDateDisplay}" TextColor="Gray" FontSize="14"/>
            </VerticalStackLayout>

            <Switch Grid.Column="1" VerticalOptions="Start" Toggled="OnThemeSwitchToggled" />
        </Grid>

        <Grid Grid.Row="1" ColumnDefinitions="*, *" RowDefinitions="*, *" 
              ColumnSpacing="15" RowSpacing="15" VerticalOptions="Center" Margin="0,0,0,50">

            <Frame Grid.Row="0" Grid.Column="0" CornerRadius="20" HasShadow="False" BorderColor="Transparent"
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">
                <VerticalStackLayout VerticalOptions="Center" Spacing="10">
                    <Label Text="📝" FontSize="35" HorizontalOptions="Center"/>
                    <Label Text="Add To-Do" FontAttributes="Bold" HorizontalOptions="Center" 
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                </VerticalStackLayout>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding AddTodoCommand}"/>
                </Frame.GestureRecognizers>
            </Frame>

            <Frame Grid.Row="0" Grid.Column="1" CornerRadius="20" HasShadow="False" BorderColor="Transparent"
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">
                <VerticalStackLayout VerticalOptions="Center" Spacing="10">
                    <Label Text="📅" FontSize="35" HorizontalOptions="Center"/>
                    <Label Text="Create Plan" FontAttributes="Bold" HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                </VerticalStackLayout>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CreatePlanCommand}"/>
                </Frame.GestureRecognizers>
            </Frame>

            <Frame Grid.Row="1" Grid.Column="0" CornerRadius="20" HasShadow="False" BorderColor="Transparent"
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"> <VerticalStackLayout VerticalOptions="Center" Spacing="10">
                    <Label Text="🤖" FontSize="35" HorizontalOptions="Center"/>
                    <Label Text="Ask AI" FontAttributes="Bold" HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                </VerticalStackLayout>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding AskAssistantCommand}"/>
                </Frame.GestureRecognizers>
            </Frame>

            <Frame Grid.Row="1" Grid.Column="1" CornerRadius="20" HasShadow="False" BorderColor="Transparent"
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">
                <VerticalStackLayout VerticalOptions="Center" Spacing="10">
                    <Label Text="💡" FontSize="35" HorizontalOptions="Center"/>
                    <Label Text="Add Note" FontAttributes="Bold" HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                </VerticalStackLayout>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding AddNoteCommand}"/>
                </Frame.GestureRecognizers>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>