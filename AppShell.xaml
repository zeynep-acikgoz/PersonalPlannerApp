<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PersonalPlannerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PersonalPlannerApp.Views"
    Title="PersonalPlannerApp"
    
    Shell.NavBarIsVisible="False"
    
    Shell.BackgroundColor="{AppThemeBinding Light=White, Dark=Black}"
    Shell.ForegroundColor="{AppThemeBinding Light=Black, Dark=White}"
    Shell.TitleColor="{AppThemeBinding Light=Black, Dark=White}"
    
    Shell.TabBarBackgroundColor="{AppThemeBinding Light=White, Dark=#1c1c1e}"
    
    
    Shell.TabBarForegroundColor="{AppThemeBinding Light=Black, Dark=White}"
    Shell.TabBarUnselectedColor="Gray">

    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid Padding="0"
                  VerticalOptions="Center" 
                  HorizontalOptions="Center">
                
                <Label Text="{Binding Title}" 
                       FontSize="14" 
                       HorizontalOptions="Center"
                       VerticalOptions="Center">
                    
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup x:Name="CommonStates">
                            
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="Gray" />
                                    <Setter Property="FontAttributes" Value="None" />
                                </VisualState.Setters>
                            </VisualState>
                            
                            <VisualState x:Name="Selected">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
                                    <Setter Property="FontAttributes" Value="Bold" />
                                </VisualState.Setters>
                            </VisualState>

                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </Label>
                
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate views:HomePage}" Route="HomePage" />
        <ShellContent Title="To Do" ContentTemplate="{DataTemplate views:ToDoPage}" Route="ToDoPage" />
        <ShellContent Title="Plan" ContentTemplate="{DataTemplate views:PlanPage}" Route="PlanPage" />
        <ShellContent Title="Assistant" ContentTemplate="{DataTemplate views:AssistantPage}" Route="AssistantPage" />
        <ShellContent Title="Mind" ContentTemplate="{DataTemplate views:MindPage}" Route="MindPage" />
    </TabBar>

</Shell>